<Window x:Class="PolygonDrawerOOP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PolygonDrawerOOP"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <Canvas Name="DrawingCanvas"
        Background="White"
        MouseLeftButtonDown="OnMouseDown"
        MouseMove="OnMouseMove">
        </Canvas>
        <Button Content="Undo" Click="OnUndo" HorizontalAlignment="Left" VerticalAlignment="Top" Height="27" Width="87" Background="#FFC4CDFF"/>
        <Button Content="Redo" Click="OnRedo" HorizontalAlignment="Left" VerticalAlignment="Top" Height="27" Width="87" Background="#FFC4CDFF" Margin="713,0,0,0"/>
    </Grid>
</Window>
